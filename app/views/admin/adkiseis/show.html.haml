.row
  .col-lg-12
    %h1.page-header 詳細
    -if @adkisei.backimage.present?
      .adkisei_backimage{{style: "background: url(#{@adkisei.backimage}) no-repeat center center; background-size: cover;"}}
    -else
      .adkisei_backimage{{style: "background: url(/assets/logo) no-repeat center center; background-size: cover;"}}
.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        Kiseis DataTables
      .panel-body
        %table#dataTables-example.table.table-striped.table-bordered.table-hover{width: "100%"}
          %thead
            %tr
              %th 期生
              %th 紹介文
              %th 入団年月
              %th 卒団年月
          %tbody
            %tr.odd.gradeX
            %td
              =@adkisei.name
            %td
              =@adkisei.text
            %td
              =@adkisei.joining
            %td
              =@adkisei.graduating
-if current_adminuser.id == 2
  = link_to edit_admin_adkisei_path(@adkisei.id) do
    .well
      .btn.btn-default.btn-lg 編集
.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        users DataTables
      .panel-body
        %table#dataTables-example.table.table-striped.table-bordered.table-hover{width: "100%"}
          %thead
            %tr
              %th 名前
              %th 大学・学部
              %th 学籍番号
              %th 勤務先・役割
              %th 設定
          %tbody
            -@adusers.each do |aduser|
              %tr.odd.gradeX
                %td
                  =aduser.name
                %td
                  =aduser.university
                %td
                  =aduser.studentnumber
                %td
                  =aduser.role
                %td.center
                  =link_to admin_aduser_path(aduser.id), class: "detail-btn", style: "width: 50%; height: 100%; display: block; float: left;" do
                    詳細

