.row
  .col-lg-12
    %h1.page-header 詳細
    -if @aduser.avator.present?
      .aduser_avator{{style: "background: url(#{@aduser.avator}) no-repeat center center; background-size: cover;"}}
    -else
      .aduser_avator{{style: "background: url(/assets/no-face) no-repeat center center; background-size: cover;"}}
.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        Kiseis DataTables
      .panel-body
        %table#dataTables-example.table.table-striped.table-bordered.table-hover{width: "100%"}
          %thead
            %tr
              %th 期生
              %th 名前
              %th 大学・学部
              %th 学籍番号
              %th 勤務先・役割
          %tbody
            %tr.odd.gradeX
            %td
              =@aduser.adkisei.name
            %td
              =@aduser.name
            %td
              =@aduser.university
            %td
              =@aduser.studentnumber
            %td
              =@aduser.role
        %table#dataTables-example.table.table-striped.table-bordered.table-hover{width: "100%"}
          %thead
            %tr
              %th 電話番号
              %th email
              %th 住所
          %tbody
            %tr.odd.gradeX
            %td
              =@aduser.phone
            %td
              =@aduser.email
            %td
              =@aduser.adress
-if current_adminuser.id == 2
  = link_to edit_admin_aduser_path(@aduser.id) do
    .well
      .btn.btn-default.btn-lg.btn-block 編集
