!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %title 期生一覧
    / Bootstrap Core CSS
    = stylesheet_link_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    #wrapper
      / Navigation
      %nav.navbar.navbar-default.navbar-static-top{:role => "navigation", :style => "margin-bottom: 0"}
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand 学生団体CHAD管理システム
        / /.navbar-header
        %ul.nav.navbar-top-links.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              %i.fa.fa-user.fa-fw
              %i.fa.fa-caret-down
            %ul.dropdown-menu.dropdown-user
              %li
                %a{href: "#"}
                  %i.fa.fa-user.fa-fw
                  プロフィール
              %li
                %a{href: "#"}
                  %i.fa.fa-gear.fa-fw
                  設定
              %li.divider
              %li
                %a{href: "login.html"}
                  %i.fa.fa-sign-out.fa-fw
                  ログアウト
            / /.dropdown-user
          / /.dropdown
        / /.navbar-top-links
        .navbar-default.sidebar{:role => "navigation"}
          .sidebar-nav.navbar-collapse
            %ul#side-menu.nav
              %li.sidebar-search
                .input-group.custom-search-form
                  %input.form-control{:placeholder => "Search...", :type => "text"}/
                  %span.input-group-btn
                    %button.btn.btn-default{:type => "button"}
                      %i.fa.fa-search
                / /input-group
              %li
                =link_to admin_root_path do
                  %i.fa.fa-dashboard.fa-fw
                  Dashboard
              %li
                =link_to admin_kiseis_path do
                  %i.fa.fa-bar-chart-o.fa-fw
                  期生
                / %ul.nav.nav-second-level
                /   %li
                /     %a{href: "flot.html"} Flot Charts
                /   %li
                /     %a{href: "morris.html"} Morris.js Charts
                / /.nav-second-level
              %li
                =link_to admin_users_path do
                  %i.fa.fa-table.fa-fw
                  メンバー
              %li
                =link_to admin_contacts_path do
                  %i.fa.fa-edit.fa-fw
                  お問い合わせ
                / /.nav-second-level
          / /.sidebar-collapse
        / /.navbar-static-side
      #page-wrapper
        .row
          .col-lg-12
            %h1.page-header メンバー一覧
        =link_to new_admin_aduser_path do
          .well
            .btn.btn-default.btn-lg.btn-block
              メンバー作成
        .well
          =form_tag(search_admin_adusers_path, method: "GET") do
            .search-box
              =label_tag "絞り込み （期生・名前で検索できます。）"
            .search-box
              =collection_select :aduser, :adkisei_id, @adkiseis, :id, :name, {include_blank: true}, {class: "form-control"}
            .search-box
              =text_field :aduser, :name, {class: "form-control", placeholder: "名前"}
            .search-btn
              =submit_tag "絞り込み", class: "search-submit-btn"
          / /.col-lg-12
        / /.row
        .row
          .col-lg-12
            .panel.panel-default
              .panel-heading
                Kiseis DataTables
              / /.panel-heading
              .panel-body
                %table#dataTables-example.table.table-striped.table-bordered.table-hover{width: "100%"}
                  %thead
                    %tr
                      %th 期生
                      %th 名前
                      %th 役割
                      %th メール
                      %th 住所
                      %th 電話番号
                      %th 設定
                  %tbody
                    -@adusers.each do |aduser|
                      %tr.odd.gradeX
                        %td
                          =aduser.adkisei.name
                        %td
                          =aduser.name
                        %td
                          =aduser.role
                        %td
                          =aduser.email
                        %td
                          =aduser.adress
                        %td
                          =aduser.phone
                        %td.center
                          =link_to edit_admin_aduser_path(aduser.id), class: "edit-btn", style: "width: 50%; height: 100%; display: block; float: left;" do
                            編集
                          =link_to admin_aduser_path(aduser.id), class: "detail-btn", style: "width: 50%; height: 100%; display: block; float: left;" do
                            削除
