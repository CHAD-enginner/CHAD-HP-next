%body
  .container
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            %h3.panel-title ログイン
          .panel-body
            =form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              %fieldset
                .form-group
                  =f.email_field :email, autofocus: true, placeholder: "e-mail", class: "form-control"
                .form-group
                  =f.password_field :password, autofocus: "off", placeholder: "password", class: "form-control"
                =f.submit "Login", class: "btn btn-lg btn-success btn-block"
